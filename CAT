import React, { useState } from "react";
import { Tabs, Tab, Pagination } from "react-bootstrap";

const CreditAssessmentTable = ({ bureauDetails }) => {
  const [key, setKey] = useState("paymentHistory");
  const [paymentPage, setPaymentPage] = useState(1);
  const [utilisationPage, setUtilisationPage] = useState(1);
  const rowsPerPage = 5;

  const customerId = bureauDetails?.customerId || "N/A";
  const paymentHistory = bureauDetails?.paymentHistory || [];
  const limitUtilisation = bureauDetails?.limitUtilisation || [];

  // Pagination logic for Payment History
  const totalPaymentPages = Math.ceil(paymentHistory.length / rowsPerPage);
  const paymentStart = (paymentPage - 1) * rowsPerPage;
  const paymentEnd = paymentStart + rowsPerPage;
  const paginatedPayments = paymentHistory.slice(paymentStart, paymentEnd);

  // Pagination logic for Limit Utilisation
  const totalUtilisationPages = Math.ceil(limitUtilisation.length / rowsPerPage);
  const utilisationStart = (utilisationPage - 1) * rowsPerPage;
  const utilisationEnd = utilisationStart + rowsPerPage;
  const paginatedUtilisation = limitUtilisation.slice(utilisationStart, utilisationEnd);

  // Function to render Bootstrap pagination component
  const renderPagination = (currentPage, totalPages, setPage) => (
    <Pagination className="justify-content-center mt-3">
      <Pagination.First onClick={() => setPage(1)} disabled={currentPage === 1} />
      <Pagination.Prev onClick={() => setPage(currentPage - 1)} disabled={currentPage === 1} />

      {[...Array(totalPages)].map((_, index) => (
        <Pagination.Item
          key={index + 1}
          active={index + 1 === currentPage}
          onClick={() => setPage(index + 1)}
        >
          {index + 1}
        </Pagination.Item>
      ))}

      <Pagination.Next
        onClick={() => setPage(currentPage + 1)}
        disabled={currentPage === totalPages}
      />
      <Pagination.Last
        onClick={() => setPage(totalPages)}
        disabled={currentPage === totalPages}
      />
    </Pagination>
  );

  return (
    <div className="container mt-4">
      <div className="d-flex justify-content-between align-items-center mb-3">
        <h4>Credit Assessment Details</h4>
        <h5 className="text-primary">Customer ID: {customerId}</h5>
      </div>

      <Tabs
        id="credit-assessment-tabs"
        activeKey={key}
        onSelect={(k) => setKey(k)}
        className="mb-3"
        justify
      >
        {/* ðŸ§¾ Payment History Tab */}
        <Tab eventKey="paymentHistory" title="Payment History">
          <div className="table-responsive">
            <table className="table table-bordered table-hover">
              <thead className="table-dark">
                <tr>
                  <th>Account ID</th>
                  <th>Date</th>
                  <th>Amount</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                {paginatedPayments.length > 0 ? (
                  paginatedPayments.map((row, index) => (
                    <tr key={index}>
                      <td>{row.account}</td>
                      <td>{row.date}</td>
                      <td>{row.amount}</td>
                      <td>{row.status}</td>
                    </tr>
                  ))
                ) : (
                  <tr>
                    <td colSpan="4" className="text-center text-muted">
                      No payment history available
                    </td>
                  </tr>
                )}
              </tbody>
            </table>
          </div>

          {/* Pagination for Payment History */}
          {totalPaymentPages > 1 &&
            renderPagination(paymentPage, totalPaymentPages, setPaymentPage)}
        </Tab>

        {/* ðŸ’³ Limit Utilisation Tab */}
        <Tab eventKey="limitUtilisation" title="Limit Utilisation">
          <div className="table-responsive">
            <table className="table table-bordered table-hover">
              <thead className="table-dark">
                <tr>
                  <th>Account ID</th>
                  <th>Month</th>
                  <th>Credit Limit</th>
                  <th>Utilisation (%)</th>
                </tr>
              </thead>
              <tbody>
                {paginatedUtilisation.length > 0 ? (
                  paginatedUtilisation.map((row, index) => (
                    <tr key={index}>
                      <td>{row.account}</td>
                      <td>{row.month}</td>
                      <td>{row.currentLimit}</td>
                      <td>{row.utilisation}</td>
                    </tr>
                  ))
                ) : (
                  <tr>
                    <td colSpan="4" className="text-center text-muted">
                      No limit utilisation available
                    </td>
                  </tr>
                )}
              </tbody>
            </table>
          </div>

          {/* Pagination for Limit Utilisation */}
          {totalUtilisationPages > 1 &&
            renderPagination(utilisationPage, totalUtilisationPages, setUtilisationPage)}
        </Tab>
      </Tabs>
    </div>
  );
};

export default CreditAssessmentTable;
